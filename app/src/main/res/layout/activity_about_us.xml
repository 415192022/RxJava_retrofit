<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView

        android:id="@+id/tv_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点我使用RXJava遍历数组了"/>
        />
    <Button
        android:id="@+id/btn_openWIfiDebug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启Wifi调试"/>
    <Button
        android:id="@+id/btn_closeWIfiDebug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭Wifi调试"/>
    <Button
        android:id="@+id/btn_getMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用Retrofit请求网络"/>

    <com.li.rr.widget.roundimageview.RoundedImageView
        android:id="@+id/riv_testimage"
        android:layout_width="100dp"
        android:layout_height="100dp" />


    <Button
        android:id="@+id/btn_rx_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RX操作"/>


</LinearLayout>